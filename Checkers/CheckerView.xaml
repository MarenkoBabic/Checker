<UserControl x:Class="Checkers.CheckerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers"
             mc:Ignorable="d" d:DesignWidth="500" >


    <StackPanel Margin="10,10,10,10">
        <ComboBox x:Name="CheckerAuswahl" 
                  ItemsSource="{Binding CheckerAuswahl  }"
                  SelectedItem="{Binding SelectedChecker}"
                  Height="30"  />
        <TextBox Name="TextBox_EingabeText" 
                 AcceptsReturn="True"
                 Text="{Binding Text}"
                 Height="160"
                 TextWrapping="Wrap"/>
        <TextBlock x:Name="TextBlock_Ergebnis"
                   Text="{Binding Path=TextBlockMessage,UpdateSourceTrigger=Default,Mode=TwoWay}"
                   Background="Beige" MinHeight="150"
                   TextAlignment="Center"
                   TextWrapping="Wrap"/>
        <Button x:Name="CheckButton" Content="Button" Height="20" />

    </StackPanel>

</UserControl>
