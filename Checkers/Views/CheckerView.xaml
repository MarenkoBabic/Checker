<UserControl x:Class="Checkers.Views.CheckerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers.Views"
             mc:Ignorable="d" Margin="10" Background="#FF767575">
    <DockPanel>

        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#FF767575">
            <ComboBox x:Name="CheckerAuswahl" ItemsSource="{Binding CheckerAuswahl}" SelectedItem="{Binding SelectedChecker}" Width="150"/>
            <Button x:Name="CheckButton" Content="Button" Height="33" Width="150" />
        </StackPanel>
        <StackPanel DockPanel.Dock="Top" Background="#FF767575">
            <TextBox x:Name="TextBox_EingabeText" 
                AcceptsReturn="True"
                Text="{Binding Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                FontSize="16"
                TextWrapping="Wrap"
                MinHeight="500" Background="#FFD4CACA" VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" MaxHeight="700" Height="388"  />

            <TextBlock x:Name="TextBlock_Ergebnis"
                Text="{Binding TextBlockMessage, Mode=TwoWay, UpdateSourceTrigger=Default}"
                Background="#FF767575"
                FontSize="30"
                TextAlignment="Center"
                TextWrapping="Wrap"
                MinWidth="500" MinHeight="300"/>
        </StackPanel>
    </DockPanel>
</UserControl>
