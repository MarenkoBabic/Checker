<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers.Views"
             xmlns:ViewModels="clr-namespace:Checkers.ViewModels" x:Class="Checkers.Views.ShellView"
             mc:Ignorable="d" Background="#FF535151">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="0">
            <Label Content="Auswählen"/>
            <Button x:Name="Checker" Content="Checker" Width="200" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top"/>
            <Button x:Name="PersonRandom" Content="Person Generator" Width="200" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <ContentControl x:Name="ActiveItem"/>
        </StackPanel>
    </Grid>
</UserControl>
