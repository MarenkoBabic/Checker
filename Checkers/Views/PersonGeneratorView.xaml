<UserControl x:Class="Checkers.Views.PersonGeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers.Views"
             mc:Ignorable="d" 
             Width="820.5" Height="579.5" Background="Black" HorizontalAlignment="Right" VerticalAlignment="Bottom">
    <Grid Margin="18,26,9,7" RenderTransformOrigin="0.5,0.5">
        <Grid.RenderTransform>
            <TransformGroup>
                <ScaleTransform/>
                <SkewTransform/>
                <RotateTransform Angle="0.016"/>
                <TranslateTransform/>
            </TransformGroup>
        </Grid.RenderTransform>

        <Grid Height="Auto" Width="Auto" Margin="0,0,375,0">
            <Label Content="Anzahl Personen" Foreground="White" Margin="10,10,199,454" Height="27"/>
            <TextBox Width="200" Margin="12,87,206,375" Text="{Binding Input}"/>
            <Button x:Name="Generator" Content="Generieren" Margin="227,87,0,375"/>
            <TextBlock Text="{Binding TextBlockPersons}" Background="#FF575454" Margin="-16,105,399,458"/>
        </Grid>

        <Grid Height="Auto" Width="364" Margin="420,8,10,18" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Filtern" Foreground="White" Margin="10,10,167,453" Height="28"/>
            <TextBox Margin="0,43,177,396"  Text="{Binding InputFilter}"/>
            <Button x:Name="Filter" Content="Filtern" Margin="202,43,0,396" />
            <TextBlock Background="#FF575454" Margin="0,134,0,-17" Text="{Binding PersonFilter}" Padding="10">
            </TextBlock>
        </Grid>

    </Grid>
</UserControl>
