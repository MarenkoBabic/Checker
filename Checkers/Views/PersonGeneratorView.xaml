<UserControl x:Class="Checkers.Views.PersonGeneratorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers.Views"
             mc:Ignorable="d" 
             Width="928.5" Height="710" Background="Black" HorizontalAlignment="Right" VerticalAlignment="Bottom">
    <Grid Margin="0,0,0,10">
        <Grid Height="571" Width="377" Margin="0,0,382,0">
            <Label Content="Anzahl Personen" Foreground="White" Margin="10,1,199,553" Height="27"/>
            <TextBox Width="200" Margin="0,33,218,498" Text="{Binding Input}"/>
            <Button x:Name="Generator" Content="Generieren" Margin="227,33,10,498"/>
            <TextBlock Text="{Binding TextBlockPersons}" Background="#FF575454" Margin="0,114,0,0"/>
        </Grid>

        <Grid Height="571" Width="377" Margin="423,10,0,0">
            <Label Content="Filtern" Foreground="White" Margin="0,0,177,543" Height="28"/>
            <TextBox Margin="-3,28,180,497"  Text="{Binding InputFilter}"/>
            <Button x:Name="Filter" Content="Filtern" Margin="202,28,0,497" />
            <TextBlock Background="#FF575454" Margin="0,99,0,0" Text="{Binding PersonFilter}" Padding="10">
            </TextBlock>
        </Grid>

    </Grid>
</UserControl>
