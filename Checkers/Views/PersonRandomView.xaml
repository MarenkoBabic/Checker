<UserControl x:Class="Checkers.Views.PersonRandomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers.Views"
             mc:Ignorable="d" Margin="10" Background="Black" d:DesignWidth="633" d:DesignHeight="600">

    <Grid Margin="10" MinHeight="582" MinWidth="504">

        <Grid Margin="0,0,0,312">
            <Label Content="Zahl eingeben" Foreground="White" Margin="0,10,399,231"/>
            <TextBox 
                x:Name="CountPerson"
                Height="30"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Width="214" Margin="0,44,0,0"/>
            <Button
                Content="Generieren"
                x:Name="GeneratorRandomPerson"
                 Margin="219,44,0,0"
                Width="200" Height="29"
                HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <DataGrid Margin="0,79,0,0" ItemsSource="{Binding PersonList,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" AlternatingRowBackground="Gray" AlternationCount="2" AutoGenerateColumns="False">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Vorname" Binding="{Binding FirstName}" Width="100"/>
                    <DataGridTextColumn Header="Nachname" Binding="{Binding LastName}" Width="100"/>
                    <DataGridTextColumn Header="Geburtsdatum" Binding="{Binding BirthDay}" Width="100"/>
                    <DataGridTextColumn Header="Haarfarbe" Binding="{Binding HairColor}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid VerticalAlignment="Bottom" Height="290">
            <Label
                Content="Vorname"
                Foreground="White"
                Margin="0,5,0,255"
                HorizontalAlignment="Left" Width="120"/>
            <TextBox
                x:Name="FirstName"
                Height="30"
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Width="120"
                Margin="0,35,0,0"/>

            <Label Content="Nachname" 
                   Foreground="White"
                   Margin="125,5,0,255"
                    HorizontalAlignment="Left" Width="120"/>
            <TextBox
                x:Name="LastName"
                Height="30"
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Width="120"
                Margin="125,35,0,0"/>

            <Label
                Content="Geburtsdatum"
                Foreground="White"
                Margin="250,5,0,255"
                 HorizontalAlignment="Left" Width="120"/>
            <TextBox
                x:Name="BirthDay"
                Height="30"
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Width="120"
                Margin="250,35,0,0"/>

            <Label
                Content="Haarfarbe"
                Foreground="White"
                Margin="375,5,0,255"
                 HorizontalAlignment="Left" Width="120"/>
            <ComboBox
                x:Name="HairColor"
                Height="30"
                VerticalAlignment="Top" 
                HorizontalAlignment="Left" 
                Width="120"
                Margin="375,35,0,0"
                ItemsSource="{Binding Path= HairColorList, Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding Path=HairColor, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>

            <Button 
                x:Name="Filter"
                Content="Filtern"
                Height="30"
                Width="113"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="500,35,0,0"/>
            <Button 
                x:Name="CreatePerson"
                Content="Neue Person"
                Height="30"
                Width="113"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="500,5,0,0"/>

            <DataGrid Margin="0,85,0,0" ItemsSource="{Binding ListPersonFiltered}" AlternatingRowBackground="Gray" AlternationCount="2" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Vorname" Binding="{Binding FirstName}" Width="100"/>
                    <DataGridTextColumn Header="Nachname" Binding="{Binding LastName}" Width="100"/>
                    <DataGridTextColumn Header="Geburtsdatum" Binding="{Binding BirthDay}" Width="100"/>
                    <DataGridTextColumn Header="Haarfarbe" Binding="{Binding HairColor}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

    </Grid>
</UserControl>
