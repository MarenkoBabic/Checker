<UserControl x:Class="Checkers.Views.PersonRandomView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Checkers.Views"
             mc:Ignorable="d" Margin="10" Background="Black">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0"
               Content="Zahl eingeben" Foreground="White" />

        <TextBox Grid.Column="0" Grid.Row="1"
                x:Name="CountPerson" MinHeight="25" TextWrapping="Wrap" Margin="5"/>

        <Button Grid.Column="4" Grid.Row="1" 
                Content="Generieren" x:Name="GeneratorRandomPerson" MinHeight="25" Margin="5"/>

        <Button Grid.Row="1" Grid.Column="5" 
                Content="Liste leeren" x:Name="DeletePersonList" MinHeight="25" Margin="5"/>

        <DataGrid Grid.Row="2" Grid.ColumnSpan="123456" AutoGenerateColumns="False" Height="300"
                ItemsSource="{Binding PersonList}" Margin="5" MinRowHeight="25" MinColumnWidth="125">
            <DataGrid.Columns >
                <DataGridTextColumn Header="Vorname" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Nachname" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="Geburtsdatum" Binding="{Binding BirthDay,StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Haarfarbe" Binding="{Binding HairColor}"/>
            </DataGrid.Columns>
        </DataGrid>

        <Label Grid.Column="0" Grid.Row="3" 
                Content="Vorname" Foreground="White"/>
        <TextBox Grid.Column="0" Grid.Row="4"
                x:Name="FirstName" MinHeight="25" TextWrapping="Wrap" Margin="5"/>

        <Label Grid.Column="1" Grid.Row="3"
            Content="Nachname" Foreground="White"/>
        <TextBox Grid.Column="1" Grid.Row="4"
                x:Name="LastName" MinHeight="25" TextWrapping="Wrap" Margin="5"/>

        <Label Grid.Column="2" Grid.Row="3"
            Content="Geburtsdatum" Foreground="White"/>
        <TextBox Grid.Column="2" Grid.Row="4"
                Text="{Binding BirthDay, StringFormat=dd-MM-yyyy}" MinHeight="25" TextWrapping="Wrap" Margin="5"/>

        <Label Grid.Column="3" Grid.Row="3"
               Content="Haarfarbe" Foreground="White"/>
        <ComboBox Grid.Column="3" Grid.Row="4"
                x:Name="HairColor"
                ItemsSource="{Binding Path= HairColorList, Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding Path=HairColor, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                MinHeight="25"  Margin="5"/>

        <Button Grid.Column="4" Grid.Row="4"
                x:Name="Filter" Content="Filtern" MinHeight="25" Margin="5"/>
        <Button Grid.Column="5" Grid.Row="4"
                x:Name="CreatePerson" Content="Neue Person" MinHeight="25" Margin="5"/>

        <DataGrid Grid.Row="5" Grid.ColumnSpan="123456" 
                  Height="400" ItemsSource="{Binding ListPersonFiltered}" Margin="5" MinRowHeight="25" MinColumnWidth="125" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vorname" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="Nachname" Binding="{Binding LastName}" />
                <DataGridTextColumn Header="Geburtsdatum" Binding="{Binding BirthDay, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Haarfarbe" Binding="{Binding HairColor}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
